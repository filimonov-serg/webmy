.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
        .navbar-header
            a.navbar-brand(href='/') Myweb
        .navbar-collapse.collapse
            ul.nav.navbar-nav
                li(class=isHere=='home'?'active':''): a(href='/') Home
                li(class=isHere=='albums'?'active':''): a(href='/albums') Альбомы
                li(class=isHere=='gallery'?'active':'')
                    if user && user.role == 'admin'
                        a(href='/gallery')
                            i.glyphicon.glyphicon-plus
                            span &nbsp;Добавить альбом
            ul.nav.navbar-nav.navbar-right
                li(class=isHere=='login'?'active':''): a(href=user ? '/logout' : '/login') #{user ? "Выход" : "Вход"}